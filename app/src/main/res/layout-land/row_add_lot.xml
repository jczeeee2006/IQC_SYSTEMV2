<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhiteLight"
    >
    <EditText
        android:textColor="@color/colorBlack"
        android:id="@+id/lot_Number"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter Lot Number"
        android:textColorHint="@color/colorBlack"
        android:fontFamily="@font/arbutus_slab"
        android:textSize="12dp"></EditText>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </FrameLayout>

    <EditText
        android:textColor="@color/colorBlack"
        android:id="@+id/lot_Quantity"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:hint="Enter Lot Qty"
        android:textColorHint="@color/colorBlack"
        android:fontFamily="@font/arbutus_slab"
        android:textSize="12dp"></EditText>

    <ImageView
        android:id="@+id/image_Remove"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_baseline_cancel_24"></ImageView>

</LinearLayout>