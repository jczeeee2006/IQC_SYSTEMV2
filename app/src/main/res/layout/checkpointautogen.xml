<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/chkpoint"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/grid_row_borderradius"
        android:ems="10"
        android:hint="checkpoint value"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.035"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="26dp" />

    <EditText
        android:id="@+id/sampleValue"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/grid_row_borderradius"
        android:ems="10"
        android:hint="sample value"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chkpoint"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pop"
        android:text="Checkpoint:"
        app:layout_constraintBottom_toTopOf="@+id/chkpoint"
        app:layout_constraintStart_toStartOf="@+id/chkpoint" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pop"
        android:text="Value:"
        app:layout_constraintBottom_toTopOf="@+id/sampleValue"
        app:layout_constraintStart_toStartOf="@+id/sampleValue" />
</androidx.constraintlayout.widget.ConstraintLayout>