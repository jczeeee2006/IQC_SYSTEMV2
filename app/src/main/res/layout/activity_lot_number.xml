            app:layout_constraintEnd_toEndOf="@+id/lot_totalquant"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/lot_totalquant"
            app:layout_constraintTop_toBottomOf="@+id/lot_totalquant" />

        <com.google.android.material.textfield.TextInputLayout
