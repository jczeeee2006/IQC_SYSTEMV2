            app:hintTextAppearance="@style/Hint"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout3"
            tools:layout_editor_absoluteX="39dp"
            tools:ignore="MissingConstraints">

            <AutoCompleteTextView
