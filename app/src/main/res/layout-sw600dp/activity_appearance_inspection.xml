<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppearanceInspection">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d0eaf2">


        <EditText
            android:id="@+id/ap_instrument"
            android:layout_width="311dp"
            android:layout_height="54dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:hint="Instrument Used"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorgrAY"
            android:textSize="30sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.015"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Spinner
            android:id="@+id/instrumentspin"
            android:layout_width="324dp"
            android:layout_height="53dp"
            android:backgroundTint="#000000"
            android:spinnerMode="dropdown"

            android:textColor="@color/colorBlack"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.064"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView37"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/arbutus_slab"
            android:text="APPEARANCE INSPECTION"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/ap_igcheckpoints"
            android:layout_width="307dp"
            android:layout_height="76dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="104dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:hint="Inspection Guide Checkpoints"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorgrAY"
            android:textSize="30sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ap_sampsize" />

        <EditText
            android:id="@+id/ap_result2"
            android:layout_width="688dp"
            android:layout_height="206dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/edittext_background"
            android:ems="10"

            android:inputType="textMultiLine"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorgrAY"
            android:textSize="30sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.55"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ap_igcheckpoints" />

        <EditText
            android:id="@+id/ap_sampsize"
            android:layout_width="301dp"
            android:layout_height="52dp"
            android:layout_marginTop="140dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:hint="Sample QTY"
            android:inputType="number"
            android:paddingTop="12sp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorgrAY"
            android:textSize="30sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/btn_done"
            android:layout_width="194dp"
            android:layout_height="85dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="112dp"

            android:background="#e1e1e1"
            android:drawableLeft="@drawable/ic_baseline_navigate_next_25"
            android:fontFamily="@font/arbutus_slab"
            android:text="Next"
            android:textColor="@color/colorBlack"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ap_judgement"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_ng"
            android:layout_width="126dp"
            android:layout_height="81dp"
            android:background="#e1e1e1"
            android:drawableLeft="@drawable/ic_baseline_cancel_presentation_24"
            android:fontFamily="@font/arbutus_slab"
            android:text="NG"
            android:textColor="@color/colorBlack"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.898"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.437" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="132dp"
            android:layout_height="78dp"
            android:background="#e1e1e1"
            android:drawableLeft="@drawable/ic_baseline_check_circle_outline_24"
            android:fontFamily="@font/arbutus_slab"
            android:text="OK"
            android:textColor="@color/colorBlack"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.605"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.436" />

        <Button
            android:id="@+id/btn_apadddefects"
            android:layout_width="239dp"
            android:layout_height="85dp"
            android:layout_marginTop="200dp"
            android:background="#e1e1e1"
            android:drawableLeft="@drawable/ic_baseline_error_outline_24"
            android:fontFamily="@font/arbutus_slab"
            android:text="Add Defects"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.158"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ap_judgement" />

        <EditText
            android:id="@+id/ap_judgement"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="56dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:inputType="textCapCharacters"
            android:hint="Judgement"
            android:paddingTop="15dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHint="@color/colorgrAY"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.55"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ap_result2" />

        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="108dp"
            android:text="Instrument Used"
            android:textColor="@color/colorBlack"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="Inspection Checkpoint"
            android:textColor="@color/colorBlack"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.077"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ap_sampsize"
            app:layout_constraintVertical_bias="0.034" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Remarks"
            android:textColor="@color/colorBlack"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.058"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ap_igcheckpoints" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Judgement"
            android:textColor="@color/colorBlack"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.068"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ap_result2" />

        <TextView
            android:id="@+id/textView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="108dp"
            android:text="Sample Size"
            android:textColor="@color/colorBlack"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.672"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>